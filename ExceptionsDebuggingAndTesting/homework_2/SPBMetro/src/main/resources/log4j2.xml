<?xml version="1.0" encoding="UTF-8"?>

<configuration status="WARN">
    <Configuration status="warn" name="MyApp" packages="">
        <Filters>
            <MarkerFilter marker="FLOW" onMatch="ACCEPT" onMismatch="NEUTRAL"/>

        </Filters>

    </Configuration>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="SearchFile" fileName="logs/search.log" immediateFlush="true">

            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="Input_errors" fileName="logs/input_errors.log " immediateFlush="true">

            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="Exceptions" fileName="logs/exceptions.log" immediateFlush="true">

            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>


        <root level="ALL">
            <appender-ref ref="SearchFile" level="INFO"/>
            <appender-ref ref="Input_errors" level="WARN"/>
            <appender-ref ref="Exceptions" level="ERROR"/>
        </root>

    </loggers>
</configuration>